{
    "name": "jmichaelward/composer-wp",
    "description": "Project for demonstrating Composer usage within a WordPress environment.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Jeremy Ward",
            "email": "jeremy.ward@webdevstudios.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "composer/installers": "^1.5",
        "johnpbloch/wordpress": "4.9.4",
        "jmichaelward/composer-wp-scripts": "dev-master"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
            "type": "vcs",
            "url": "git@bitbucket.org:jmichaelward/composer-wp-scripts.git"
        }
    ],
    "scripts": {
        "wds:ls": "echo \"Here are the files in this directory:\"; ls -la",
        "wds:bash-script": "sh ./vendor/bin/bash-script.sh",
        "wds:php-script": "@php ./vendor/bin/php-script.php"
    },
    "scripts-descriptions": {
        "wds:ls": "Lists the files in the current directory.",
        "wds:bash-script": "Runs a custom bash script written for this presentation.",
        "wds:php-script": "@php ./bin/php-script.php"
    }
}
